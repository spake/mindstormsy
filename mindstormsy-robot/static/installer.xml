<extension
		name="Mindstormsy"
		description="Adds the Mindstormsy robot and gadget to the Wave."
		thumbnailUrl="http://mindstormsy-robot.appspot.com/static/thumbnail.jpg">
	<author name="George Caley" />
	<menuHook location="toolbar" text="Adds Mindstormsy"
			iconUrl="http://mindstormsy-robot.appspot.com/static/icon.png">
		<insertGadget url="http://mindstormsy-robot.appspot.com/static/mindstormsy-gadget.xml" />
		<addParticipants>
			<participant id="mindstormsy-robot@appspot.com" />
		</addParticipants>
	</menuHook>
</extension>
